<!-- Header -->
<% include template/view_header %>
<!-- /Header -->

<!-- Container Starts -->
<div class="container">

	<center>
		<h1>Yorokobi Inventory Management</h1>
	</center>
	<!-- menu -->
	<% include template/view_menu %>
	<!-- /menu -->
	<center>
		<h4>Buy New Product</h4>
	</center>

	<form action="/product_info/insert_product_info" method="POST" class="">

		Product Name :
		<input type="text" name="name" class="form-control">
		Product Details :
		<input type="text" name="details" class="form-control">
		Product Unit Price :
		<input type="number" step="any" name="unit_price" class="form-control">
		Opening Stock :
		<input type="number" step="any" name="opening_stock" class="form-control"><br>

		<input type="submit" name="submit" value="Save" class="btn btn-success">

	</form>


	<% if (errors) { %>

	<ul>
		<% errors.forEach(function(e){ %>

		<li><%= e %></li>

		<% }); %>
	</ul>

	<% } %>


</div>
<!-- Container Ends -->

<!-- Footer -->
<% include template/view_footer %>
<!-- /Footer -->